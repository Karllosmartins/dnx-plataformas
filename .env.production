# =====================================================
# CONFIGURAÇÕES DE PRODUÇÃO - DNX PLATAFORMAS
# Para deploy na VPS app.dnmarketing.com.br
# =====================================================

# Supabase - SUBSTITUA PELAS SUAS CREDENCIAIS
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
DATABASE_URL="postgresql://postgres:your-password@your-project.supabase.co:5432/postgres"

# Aplicação - Produção
NEXTAUTH_SECRET=your-production-secret-key-very-secure
NEXTAUTH_URL=https://app.dnxplataformas.com.br

# Sistema
NODE_ENV=production
PORT=3000

# URLs do Sistema
FRONTEND_URL=https://app.dnxplataformas.com.br
API_URL=https://app.dnxplataformas.com.br/api
DEFAULT_WHATSAPP_BASEURL=https://wsapi.dnmarketing.com.br

# Segurança
ENCRYPTION_KEY=your-encryption-key-production
RATE_LIMIT_REQUESTS_PER_MINUTE=100
SESSION_TIMEOUT=1440

# Monitoramento (opcional)
# SENTRY_DSN=https://your_sentry_dsn
# GOOGLE_ANALYTICS_ID=GA_ID

# Logs
DEBUG=false
LOG_LEVEL=info